doctype html
html
  head
    meta(charset='UTF-8')
    title= subject
    style.
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
      }
      .header {
        text-align: center;
        padding-bottom: 20px;
        border-bottom: 1px solid #eee;
      }
      .logo {
        max-width: 150px;
      }
      .content {
        padding: 20px 0;
      }
      .button {
        display: inline-block;
        padding: 10px 20px;
        margin: 20px 0;
        background-color: #3498db;
        color: #fff !important;
        text-decoration: none;
        border-radius: 5px;
      }
      .footer {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #eee;
        font-size: 12px;
        color: #777;
      }
  body
    .container
      .header
        img.logo(src='https://your-school-logo-url.com/logo.png' alt='Literacy Tree School Logo')
        h1 Literacy Tree School
      .content
        h2 Hi #{firstName},
        p You requested a password reset. Click the button below to reset your password:
        a.button(href=url) Reset Password
        p If you didn't request this, please ignore this email.
        p This link is valid for 10 minutes.
      .footer
        p &copy; #{new Date().getFullYear()} Literacy Tree School. All rights reserved.
        p This email was sent to #{to}.